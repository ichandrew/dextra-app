<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/food_custom_list_view_image"
        android:contentDescription="@string/app_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/food_custom_list_view_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1x"
        android:layout_weight="0"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/food_custom_list_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ingrediente"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/food_custom_minus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="-"/>

    <Button
        android:id="@+id/food_custom_plus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="+"/>

</LinearLayout>